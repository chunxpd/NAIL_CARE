<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:background="#2b3499"
        android:layout_width="match_parent"
        android:layout_height="15dp" />
    <LinearLayout
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="15dp"
            android:weightSum="2"
            android:layout_height="match_parent">
            <LinearLayout
                android:background="#2b3499"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />
            <LinearLayout
                android:background="#f8b41c"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:background="#ffffff"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_margin="10dp"
                    android:layout_width="240dp"
                    android:layout_height="96dp"
                    android:src="@drawable/logo_company" />
                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <ImageView
                    android:layout_margin="10dp"
                    android:layout_width="288dp"
                    android:layout_height="58dp"
                    android:src="@drawable/logo_kead" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textSize="80dp"
                    android:textAlignment="center"
                    android:text="@string/heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:weightSum="3"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:gravity="bottom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_margin="30dp"
                            android:id="@+id/round"
                            android:onClick="onClick"
                            android:layout_weight="1"
                            android:src="@drawable/finger_round"
                            android:layout_width="180dp"
                            android:layout_height="180dp" />
                        <ImageView
                            android:layout_margin="30dp"
                            android:id="@+id/oval"
                            android:onClick="onClick"
                            android:layout_weight="1"
                            android:src="@drawable/finger_oval"
                            android:layout_width="180dp"
                            android:layout_height="180dp" />
                        <ImageView
                            android:layout_margin="30dp"
                            android:id="@+id/square"
                            android:onClick="onClick"
                            android:layout_weight="1"
                            android:src="@drawable/finger_square"
                            android:layout_width="180dp"
                            android:layout_height="180dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:weightSum="3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_margin="30dp"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:text="Round"
                            android:textColor="#666"
                            android:textSize="40dp"
                            android:layout_width="180dp"
                            android:layout_height="match_parent" />
                        <TextView
                            android:layout_margin="30dp"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:text="Oval"
                            android:textColor="#666"
                            android:textSize="40dp"
                            android:layout_width="180dp"
                            android:layout_height="match_parent" />
                        <TextView
                            android:layout_margin="30dp"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:text="Square"
                            android:textColor="#666"
                            android:textSize="40dp"
                            android:layout_width="180dp"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="2dip"
                    android:background="#ccc" />
                <TextView
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:text="@string/step1"
                    android:textSize="20dp"
                    android:textColor="#666"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:weightSum="2"
            android:layout_width="15dp"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <LinearLayout
                android:background="#2b3499"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />
            <LinearLayout
                android:background="#f8b41c"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_gravity="bottom"
        android:background="#f8b41c"
        android:layout_width="match_parent"
        android:layout_height="15dp" />
</LinearLayout>